<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension"  owl="1">
        <xpath expr="//PaymentMethodButton" position="replace">
            <t t-if="currentOrder.get_orderlines().length != 0">
                <t t-if="currentOrder.get_orderlines()[0].product.kw_checkbox_product_category_id[0] === paymentMethod.kw_checkbox_product_category_id[0]">
                    <PaymentMethodButton paymentMethod="paymentMethod" />
                </t>
            </t>
            <t t-else="">
                <PaymentMethodButton paymentMethod="paymentMethod" />
            </t>
        </xpath>
    </t>

</templates>
