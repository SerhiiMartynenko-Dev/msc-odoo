<?xml version="1.0" encoding="UTF-8" ?>
<odoo>



    <record id="view_wizard_reassessment_form" model="ir.ui.view">
        <field name="name">msc.wizard.reassessment.form</field>
        <field name="model">msc.wizard.reassessment</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" duplicate="0" delete="0">
                <sheet>
                    <field name="id" invisible="1" />

                    <group>
                        <field name="product_domain"
                               widget="domain" options="{'model': 'product.product', 'in_dialog': true}" />
                        <field name="mode" />
                        <field name="value" />
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_confirm"
                            string="Confirm" class="btn-primary" />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>



    <record id="action_reassessment" model="ir.actions.server">
        <field name="name">Reassessment</field>
        <field name="model_id" ref="msc.model_msc_wizard_reassessment" />
        <field name="state">code</field>
        <field name="code">action = model.create_and_show()</field>
    </record>


    <menuitem id="menu_reassessment"
              action="msc.action_reassessment"
              parent="sale.product_menu_catalog"
              name="Reassessment"
              groups="sales_team.group_sale_manager"
              sequence="20"
    />



</odoo>
