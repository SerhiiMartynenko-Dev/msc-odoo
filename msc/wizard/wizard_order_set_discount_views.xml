<?xml version="1.0" encoding="UTF-8" ?>
<odoo>



    <record id="view_wizard_order_set_discount_form" model="ir.ui.view">
        <field name="name">msc.wizard.order_set_discount.form</field>
        <field name="model">msc.wizard.order_set_discount</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" duplicate="0" delete="0">
                <sheet>
                    <field name="id" invisible="1" />

                    <label for="discount" />
                    <h1>
                        <field name="discount" widget="percentage" />
                    </h1>
                </sheet>
                <footer>
                    <button type="object" name="action_confirm"
                            string="Confirm" class="btn-primary" />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>



</odoo>
