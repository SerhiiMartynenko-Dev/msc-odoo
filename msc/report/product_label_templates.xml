<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="report_product_label">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div t-att-data-oe-model="doc and doc._name"
                     t-att-data-oe-id="doc and doc.id"
                     t-att-data-oe-lang="doc and doc.env.context.get('lang')"
                     class="article o_report_layout_standard"
                     style="font-size: 14pt;">
                    <div class="page">
                        <div class="oe_structure"/>

                        <table class="w-100">
                            <tr>
                                <td class="w-100" style="vertical-align: top;">
                                    <span t-field="doc.name" /><br/>
                                    <br/>
                                    <span t-field="doc.barcode" /><br/>
                                    <t t-if="doc.size_value">
                                        <br/>
                                        <span style="font-size: 1.2em;">Розмір: <span t-field="doc.size_value" /></span>
                                    </t>
                                </td>
                                <td class="text-right" style="vertical-align: middle; padding-top: 25px; padding-right: 5px;">
                                     <img t-att-src="'/report/barcode/QR/%s?width=220&amp;height=220' % (doc.barcode or doc.name)" alt="QR-code" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>





    <record id="action_product_label_report" model="ir.actions.report">
        <field name="name">Product Label</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">msc.report_product_label</field>
        <field name="report_file">msc.report_product_label</field>
        <field name="print_report_name">'Label - %s' % (object.barcode or '')</field>
        <field name="binding_model_id" ref="product.model_product_product" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_label_52x30mm" />
    </record>

    <record id="action_product_label" model="ir.actions.server">
        <field name="name">Product Label</field>
        <field name="model_id" ref="product.model_product_product" />
        <field name="binding_model_id" ref="product.model_product_product" />
        <field name="state">code</field>
        <field name="code">action = records.action_print_label()</field>
    </record>


</odoo>
