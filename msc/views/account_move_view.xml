<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.msc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="priority" eval="999" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <button type="object" name="action_print_receipt"
                        attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('payment_state', 'not in', ('paid', 'in_payment'))]}"
                        string="Print Receipt" icon="fa-print" class="btn-success" />
            </field>

            <group name="sale_info_group" position="inside">
                <field name="date_paid" />
            </group>
        </field>
    </record>



</odoo>
