<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="product_search_form_view" model="ir.ui.view">
        <field name="name">product.product.search.inherit.msc</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view" />
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <field name="product_template_attribute_value_ids" position="attributes">
                <attribute name="context">{'condition': 'and'}</attribute>
            </field>
        </field>
    </record>






    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.product.tree.inherit.msc.sale_user</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority" eval="1000" />
        <field name="arch" type="xml">
            <field name="standard_price" position="after">
                <field name="stock_cost" optional="show" />
            </field>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree.inherit.msc.sale_user</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="priority" eval="1000" />
        <field name="arch" type="xml">
            <field name="standard_price" position="after">
                <field name="stock_cost" optional="show" />
            </field>
        </field>
    </record>




    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.inherit.msc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="1000" />
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <label for="stock_cost_select" string="Stock Cost" />
                <div>
                    <field name="stock_cost_select" widget="radio" options="{'horizontal': true}" /><br/>
                    <field name="stock_cost_auto" attrs="{'invisible': [('stock_cost_select', '!=', 'auto')]}" />
                    <field name="stock_cost_manual" attrs="{'invisible': [('stock_cost_select', '!=', 'manual')], 'required': [('stock_cost_select', '=', 'manual')]}" />
                </div>
            </field>
        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.msc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="1000" />
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <label for="stock_cost_select" string="Stock Cost" />
                <div>
                    <field name="stock_cost_select" widget="radio" options="{'horizontal': true}" /><br/>
                    <field name="stock_cost_auto" attrs="{'invisible': [('stock_cost_select', '!=', 'auto')]}" />
                    <field name="stock_cost_manual" attrs="{'invisible': [('stock_cost_select', '!=', 'manual')], 'required': [('stock_cost_select', '=', 'manual')]}" />
                </div>
            </field>
        </field>
    </record>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.inherit.msc</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="priority" eval="1000" />
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <label for="stock_cost_select" string="Stock Cost" />
                <div>
                    <field name="stock_cost_select" widget="radio" options="{'horizontal': true}" /><br/>
                    <field name="stock_cost_auto" attrs="{'invisible': [('stock_cost_select', '!=', 'auto')]}" />
                    <field name="stock_cost_manual" attrs="{'invisible': [('stock_cost_select', '!=', 'manual')], 'required': [('stock_cost_select', '=', 'manual')]}" />
                </div>
            </field>
        </field>
    </record>







    <!--
        Hide cost
    -->

    <record id="product_template_tree_view_sale_user" model="ir.ui.view">
        <field name="name">product.template.product.tree.inherit.msc.sale_user</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <field name="standard_price" position="replace" />
            <field name="stock_cost" position="replace" />
        </field>
    </record>

    <record id="product_product_tree_view_sale_user" model="ir.ui.view">
        <field name="name">product.product.tree.inherit.msc.sale_user</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <field name="standard_price" position="replace" />
            <field name="stock_cost" position="replace" />
        </field>
    </record>




    <record id="product_template_form_view_sale_user" model="ir.ui.view">
        <field name="name">product.template.common.inherit.msc.sale_user</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']/label[@for='standard_price']" position="replace" />
            <xpath expr="//group[@name='group_standard_price']/div[@name='standard_price_uom']" position="replace" />

            <xpath expr="//label[@for='stock_cost_select']" position="replace" />
            <xpath expr="//field[@name='stock_cost_select']/.." position="replace" />
        </field>
    </record>

    <record id="product_template_only_form_view_sale_user" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.msc.sale_user</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='stock_cost_select']" position="replace" />
            <xpath expr="//field[@name='stock_cost_select']/.." position="replace" />
        </field>
    </record>

    <record id="product_normal_form_view_sale_user" model="ir.ui.view">
        <field name="name">product.product.form.inherit.msc.sale_user</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='stock_cost_select']" position="replace" />
            <xpath expr="//field[@name='stock_cost_select']/.." position="replace" />
        </field>
    </record>



    <record id="product_variant_easy_edit_view_sale_user" model="ir.ui.view">
        <field name="name">product.product.view.form.easy.inherit.msc.sale_user</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <field name="standard_price" position="replace" />
            <xpath expr="//label[@for='stock_cost_select']" position="replace" />
            <xpath expr="//field[@name='stock_cost_select']/.." position="replace" />
        </field>
    </record>


    <record id="product_supplierinfo_tree_view_sale_user" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.view.inherit.msc.sale_user</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view" />
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <field name="price" position="replace" />
            <field name="currency_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="product_supplierinfo_form_view_sale_user" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.view.inherit.msc.sale_user</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
        <field name="priority" eval="99999" />
        <field name="groups_id" eval="[(6, 0, [ref('msc.group_msc_sale_user')])]" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='price']" position="replace"/>
            <xpath expr="//field[@name='price']/.." position="replace"/>
        </field>
    </record>




</odoo>
